{
  "name": "typescript-hello-world",
  "version": "1.0.0",
  "description": "Minimal TypeScript Hello World",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
